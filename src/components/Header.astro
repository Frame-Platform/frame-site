---
import { Icon } from "@astrojs/starlight/components";
---

<header>
    <a href="/" class="title-wrapper">
      <img src="/favicon.svg" alt="Frame logo" />
      <span>Frame</span>
    </a>
    <nav class="nav-links">
      <a class="doc-link" href="/case-study/introduction">Case Study</a>
      <a class="doc-link" href="/documentation/deployment">Documentation</a>
      <a href="#"><Icon name="seti:github" size="1.5rem" /></a>
      <a href="#"><Icon name="linkedin" size="1.5rem" /></a>
    </nav>
</header>

<style>
header {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 100;
  padding: 1rem 2rem;
  background: transparent;
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 2rem;
  transition: background 0.5s ease, box-shadow 0.3s ease, backdrop-filter 0.3s ease;
}

header.scrolled {
  background: rgba(15, 15, 17, 0.9);
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(8px);
  -webkit-backdrop-filter: blur(8px);
}

.title-wrapper {
  display: flex;
  align-items: center;
  gap: 1rem;
  text-decoration: none;
  color: var(--sl-color-accent-high);
  font-weight: 600;
  font-size: 24px;
}

.title-wrapper img {
  width: 40px;
  height: 40px;
}

.nav-links {
  display: flex;
  align-items: center;
  gap: 1.5rem;
}

.nav-links a {
  text-decoration: none;
  color: var(--sl-color-white);
  font-weight: 500;
  transition: color 0.3s ease;
}

.nav-links a:hover {
  color: var(--sl-color-accent-high);
}

.doc-link {
  font-size: 16px;
}

@media (max-width: 640px) {
  .doc-link {
    display: none;
  }
}
</style>

<script>
  const header = document.querySelector("header");

  window.addEventListener("scroll", () => {
    if (window.scrollY > 100) {
      header!.classList.add("scrolled");
    } else {
      header!.classList.remove("scrolled");
    }
  });
</script>
