}

.screenshot-stack {
  display: flex;
  justify-content: center;
  gap: 2rem;
  margin-bottom: 2.5rem;
  width: 30%
}

.screenshot {
  max-width: 420px;
  object-fit: contain;
}

.cta-button {
  max-width: 250px;
