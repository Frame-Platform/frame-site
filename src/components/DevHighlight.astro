}

/* === Text Side === */
.dev-highlight-left {
  /* flex: 1 1 450px;
  max-width: 500px; */
  max-width: 500px;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  gap: 1rem;
}

/* === Screenshots === */
.screenshot-stack {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
  flex: 1 1 400px;
  max-width: 500px;
}

.screenshot {
  width: 100%;
  border-radius: 12px;
  box-shadow: 0 6px 8px rgba(0, 0, 0, 0.20);
}

/* === CTA Button === */
.cta-button {
  background: var(--sl-color-accent-high);
  color: #121212;
  padding: 0.75rem 1.25rem;
  border-radius: 999px;
  font-weight: 600;
  text-decoration: none;
  transition: background 0.3s ease;
}

.cta-button:hover {
  background: var(--sl-color-white);
}

.screenshot-mobile {
  display: none;
}

@media (max-width: 768px) {
  .dev-highlight-inner {
    flex-direction: column-reverse;
    padding: 0;
    gap: 2rem;
  }

  .dev-highlight-left {
    padding: 0 1rem;
  }

  .screenshot-stack {
    width: 100%;
    max-width: 90%;
  }

  .screenshot {
    max-width: 100%;
  }

  .screenshot-desktop {
    display: none;
  }

  .screenshot-mobile {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin: 1.5rem 0;
  }

  .cta-button {
    margin-top: 1.25rem;
  }
}

</style>

